<h2>New Post</h2>

<% if @user != nil %>
  <form action="/entries" method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title_input" class="form-label">Title</label>
      <input type="text" name="title" id="title_input" class="form-control">
    </div>

 <div class="mb-3">
    <label for="description_input">Description</label>
    <input type="text" name="description" id="description_input">
     </div>

  <div class="mb-3">
    <label for="occured_on_input">Posted On</label>
    <input type="date" name="occured_on_input" id="occured_on_input">
   </div>

       <div class="mb-3">
      <label for="image_input" class="form-label">Image URL</label>
      <input type="text" name="image" id="image_input" class="form-control">
    </div>
    

    <div class="mb-3">
      <label for="uploaded_image_input" class="form-label">Upload Image</label>
      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control">
    </div>

    <button class="btn btn-primary">Save</button>
    <a href="/entries">Cancel</a>
    
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  </form>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>