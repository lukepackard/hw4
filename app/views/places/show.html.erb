<h1><%= @place["name"] %></h1>

<h2><p>
  <a href="/entries/new?place_id=<%= @place["id"] %>"class="btn btn-outline-dark">New Post</a>
</p></h2>

<% for entry in @entries %>
  <h3><%= entry["title"] %></h3>
   <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>